.page-container {
    min-height: 100vh;
    padding: 30rpx;
    background: #f5f6fa;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .login-card {
    width: 100%;
    padding: 40rpx;
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  }
  
  .title {
    font-size: 36rpx;
    font-weight: 600;
    text-align: center;
    margin-bottom: 40rpx;
  }
  
  .input {
    width: 100%;
    height: 88rpx;
    padding: 0 30rpx;
    background: #f5f6fa;
    border: 2rpx solid #e8e8e8;
    border-radius: 8rpx;
    margin-bottom: 40rpx;
  }
  
  .login-btn {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    background: #1890ff;
    color: #fff;
    border-radius: 44rpx;
  }