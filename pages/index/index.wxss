.page-container {
    min-height: 100vh;
    background: #f5f6fa;
  }
  
  .banner {
    width: 100%;
    height: 360rpx;
  }
  
  .banner-image {
    width: 100%;
    height: 100%;
  }
  
  .content {
    padding: 40rpx 30rpx;
    margin-top: -40rpx;
    background: #fff;
    border-radius: 40rpx 40rpx 0 0;
    position: relative;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    text-align: center;
    margin-bottom: 12rpx;
  }
  
  .subtitle {
    font-size: 28rpx;
    color: #666;
    text-align: center;
    margin-bottom: 40rpx;
  }
  
  .info-section {
    margin-bottom: 40rpx;
    padding: 30rpx;
    background: #f8f9fc;
    border-radius: 16rpx;
  }
  
  .info-title {
    font-size: 30rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 20rpx;
  }
  
  .info-item {
    font-size: 28rpx;
    color: #666;
    line-height: 1.8;
  }
  
  .reserve-btn {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    background: #1890ff;
    color: #fff;
    font-size: 32rpx;
    border-radius: 44rpx;
    margin-top: 60rpx;
    text-align: center;
    transition: all 0.3s;
  }
  
  .reserve-btn:active {
    opacity: 0.8;
  }
  
  .admin-section {
    position: fixed;
    bottom: 100rpx;
    right: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 20rpx;
  }
  
  .admin-entry, .logout-btn {
    padding: 20rpx 30rpx;
    background: #007AFF;
    color: white;
    border-radius: 30rpx;
    font-size: 28rpx;
  }
  
  .logout-btn {
    background: #FF3B30;
  } 