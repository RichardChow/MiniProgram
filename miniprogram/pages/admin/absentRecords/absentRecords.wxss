.container {
  padding: 30rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

.absent-list {
  width: 100%;
}

.absent-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.absent-item.restricted {
  border-left: 6rpx solid #f5222d;
}

.user-info {
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.count {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-bottom: 10rpx;
}

.warning {
  font-size: 24rpx;
  color: #fff;
  background: #f5222d;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  display: inline-block;
  margin-top: 10rpx;
}

.record-list {
  display: flex;
  flex-direction: column;
}

.record-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  flex-direction: column;
}

.record-item:last-child {
  border-bottom: none;
}

.record-item text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
} 