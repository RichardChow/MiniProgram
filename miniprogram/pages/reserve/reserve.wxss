.page-container {
    min-height: 100vh;
    padding: 30rpx;
    background: #f5f6fa;
  }
  
  .form-card {
    margin-bottom: 30rpx;
    padding: 30rpx;
    background: #ffffff;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  }
  
  .form-title {
    margin-bottom: 30rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
  }
  
  .form-group {
    position: relative;
  }
  
  .form-item {
    margin-bottom: 40rpx;
  }
  
  .form-item:last-child {
    margin-bottom: 0;
  }
  
  .label {
    display: block;
    margin-bottom: 16rpx;
    font-size: 28rpx;
    color: #333;
  }
  
  .label.required:after {
    content: '*';
    margin-left: 8rpx;
    color: #ff4d4f;
  }
  
  .input {
    width: 100%;
    height: 88rpx;
    padding: 0 30rpx;
    background: #f5f6fa;
    border: 2rpx solid #e8e8e8;
    border-radius: 8rpx;
    font-size: 28rpx;
    transition: all 0.3s;
  }
  
  .input:focus {
    border-color: #40a9ff;
    box-shadow: 0 0 0 2rpx rgba(24, 144, 255, 0.2);
  }
  
  .radio-group {
    display: flex;
    gap: 40rpx;
  }
  
  .radio {
    display: flex;
    align-items: center;
    font-size: 28rpx;
  }
  
  .radio text {
    margin-left: 8rpx;
  }
  
  .picker {
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 30rpx;
    background: #f5f6fa;
    border: 2rpx solid #e8e8e8;
    border-radius: 8rpx;
    font-size: 28rpx;
    color: #999;
  }
  
  .picker-selected {
    color: #333;
  }
  
  .slots-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    margin-top: 20rpx;
  }
  
  .time-slot {
    position: relative;
    padding: 20rpx 30rpx;
    background: #f5f6fa;
    border: 2rpx solid #e8e8e8;
    border-radius: 8rpx;
    font-size: 26rpx;
    color: #666;
    transition: all 0.3s;
  }
  
  .time-slot.disabled {
    background: #f5f5f5;
    color: #999;
    border-color: #e8e8e8;
    cursor: not-allowed;
  }
  
  .time-slot .tooltip {
    position: absolute;
    bottom: -4rpx;
    right: 4rpx;
    font-size: 20rpx;
    color: #ff4d4f;
    transform: scale(0.8);
    transform-origin: right bottom;
  }
  
  .time-slot.selected {
    background: #e6f7ff;
    color: #1890ff;
    border-color: #91d5ff;
  }
  
  .submit-btn {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    margin-top: 60rpx;
    background: #1890ff;
    border-radius: 44rpx;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    transition: all 0.3s;
  }
  
  .submit-btn:active {
    opacity: 0.8;
  } 